{
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "always"
        }
    },
    "flake8.args": [
        "--max-line-length=88",
        "--ignore=E402",
        "--ignore=E203"
    ],
    "isort.args": [
        "--profile", "black"
    ]
}